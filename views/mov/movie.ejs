 <!-- movie title is ok -->

 <div class="new">

 <div class="movie-title"> <h1><%=  movies.title %> </h1></div>

 <% if (movies.backdrop_path === null) { %>
  <p></p>
<% } else { %>
  <div class="movie-title"><img id="listimage" src="https://image.tmdb.org/t/p/w500/<%= movies.backdrop_path %> " alt="img">  </div>
  <a class="movie-title" href="/movies/lists/<%= movies.id%>/similar ">Find similar movies</a></h4>
<% } %>

<div class="movie-title"><form action="/movies/lists/<%= movies.id %>/create" method="post">
  <div class="wrap">
      <div class="search">
          
         <input class="searchTerm"
          name="rating" 
          id="re" 
          type="number"  max="10.0"
          min="1.0"
          required 
          placeholder="rate this movie">
         <button  type="submit"class="searchButton material-symbols-outlined" >star</button>
       
         
      </div>
   </div>
  </div>
</form>

<!-- movies genre -->

<div><h4 class="new" >Genres</h4> 
<% for( let i = 0; i < movies.genres.length; i++ ) { %>
<h4 class="movie-title"><%= movies.genres[i].name %> </h4>
<% } %>

<!-- movie release date-->
      
<% if (movies.release_date === null) { %>
<p></p>
<% } else { %>
<h4 class="movie-title">Release date: <%= movies.release_date %> </h4>

<% } %>

       
<!-- movie revenue-->
<% if (movies.revenue === null) { %>
<p></p>
<% } else { %>
<h4 class="movie-title">Revenue: <%= movies.revenue %> </h4>

<% } %>

<!-- movie runtime -->

<% if (movies.runtime === null) { %>
<p></p>
<% } else { %>
<h4 class="movie-title">Runtime: <%= movies.runtime +"" + "min" %>  </h4>

<% } %>

<!-- movie language with forEach method -->


<% movies.spoken_languages.forEach(movie => { %>
 <h4 class="movie-title">Spoken languages: <%= movie.name %> </h4>
<% }) %>

<!-- movies status -->

<% if (movies.status === null) { %>
<p></p>
<% } else { %>
<h4 class="movie-title">Status: <%= movies.status %> </h4>
<% } %>

<!-- movies tagline -->
<% if (movies.tagline === null) { %>
<p></p>
<% } else { %>
<h4 class="movie-title"> Tagline: <%= movies.tagline %> </h4>
<% } %>

<!--video available-->
<% if ( movies.video === false) { %>
<h4 class="movie-title"> Video: not available</h4>
<% }else {%>
<h4 class="movie-title"> Video: available"</h4>
<%} %> 

<!-- movies vote average -->

<% if (movies.vote_average === null) { %>
<p></p>
<% } else { %>
<h4 class="movie-title">Vote average: <%= movies.vote_average %> </h4>

<% } %>

<!-- movies count -->

<% if (movies.vote_count === null) { %>
<p></p>
<% } else { %>
 <h4 class="movie-title">Vote count: <%= movies.vote_count %> </h4>
<% } %>

 <!-- movies production company with forEach -->

<% movies.production_companies.forEach(company => { %>

<% if (company.logo_path === null) { %>
<p></p>
<% } else { %>
<div class="movie-title"><img class="movieimage" src="https://image.tmdb.org/t/p/w500/<%= company.logo_path %> " alt="logo" id="imo"> </div>
<% } %>

 <!-- company name -->
<% if (company.name === null) { %>
<p></p>
<% } else { %>
<h4 class="movie-title">Company name: <%= company.name %> </h4>
 <% } %>

 <!-- movies production country -->
<% if (company.origin_country === null) { %>
  <p>not available</p>
<% } else { %>
<h4 class="movie-title">Company country: <%= company.origin_country %> </h4>
<% } %>

<% }) %>

 </div>


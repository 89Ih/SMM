<form class="movietitle" action="/movies/lists/search" method="get">
    
    <div class="wrap">
        <div class="search">
            
           <input class="searchTerm" type="search" name="search" id="sch" placeholder="type your movie" required>
           <button  type="submit"class="searchButton" ><span class="material-symbols-outlined">search</span></button>
           
        </div>
     </div>
  
</form>

<div class="new">
<% for( let i = 0; i < listAPI.length; i++ ) { %>
    
    <% if (listAPI[i].backdrop_path === null) { %>
      
        <p></p>
    
        <% } else { %>
       
<a href="/movies/lists/<%= listAPI[i].id %> "><%= listAPI[i].title %> </a>
<h4><%= listAPI[i].overview %> </h4>
<img id= "listimage" src=<%= `https://image.tmdb.org/t/p/w500/${listAPI[i].backdrop_path}`%>>  
    <% } %>

        <% } %>
 </div>

</body>